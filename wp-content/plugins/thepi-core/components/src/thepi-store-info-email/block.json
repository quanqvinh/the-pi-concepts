{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "thepi-core/store-info-email",
	"version": "0.1.0",
	"title": "Thepi Store Info Email",
	"category": "widgets",
	"icon": "email",
	"description": "Display the store's email address with optional styling.",
	"example": {},
	"attributes": {
		"enablePrefix": {
			"type": "boolean",
			"default": false
		},
		"prefix": {
			"type": "string",
			"default": ""
		},
		"enableSuffix": {
			"type": "boolean",
			"default": false
		},
		"suffix": {
			"type": "string",
			"default": ""
		},
		"showAsLink": {
			"type": "boolean",
			"default": false
		},
		"underline": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": true,
		"color": {
			"background": true,
			"text": true,
			"link": true,
			"enableContrastChecker": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": true
	},
	"textdomain": "thepi-components",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
